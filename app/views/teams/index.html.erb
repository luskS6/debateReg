<% if school_signed_in? %>

<% if current_school.role_id == 1 %>

<h1>Listing teams</h1>
</br>
<% for school in @schools.sort{|a,b| a.sName <=> b.sName } %>
<%= link_to school.sName, teams_path({:sView => school.id})%> |
<% end %>

<table cellspacing = 4>
  <tr>
    <th>Team Name</th>
    <th>Person 1</th>
    <th>Person 2</th>
    <th>seed</th>
    <th>exp</th>
    <th>School</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.teamName %></td>
    <td><%= team.tfirstName1 %> <%= team.tlastName1 %></td>
    <td><%= team.tfirstName2 %> <%= team.tlastName2 %></td>
    <td><%= team.tseed %></td>
    <td><%= team.texp %></td>
    <td><%= team.school.sName %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<% else %>
<script type ="text/javascript">
	window.location.href="/main/index"
</script>
<% end %>

<% end %>
