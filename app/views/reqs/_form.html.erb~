<%= form_for(@req) do |f| %>
  <% if @req.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@req.errors.count, "error") %> prohibited this req from being saved:</h2>

      <ul>
      <% @req.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :diet %><br />
    <%= f.text_area :diet %>
  </div>
  <div class="field">
    <%= f.label :special %><br />
    <%= f.text_area :special %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
